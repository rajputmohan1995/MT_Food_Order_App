@model ProductDTO
@{
    var pageTitle = "Delete Product";
    ViewData["Title"] = pageTitle;
    var pageHeader = new PageDefaultHeader(pageTitle);
    pageHeader.PageLinks.Add(new() { Action = "Index", Controller = "Home", PageName = "Home" });
    pageHeader.PageLinks.Add(new() { Action = "Index", Controller = "Product", PageName = "Products" });
    pageHeader.PageLinks.Add(new() { Action = "Delete", Controller = "Product", PageName = pageTitle, IsCurrentPage = true });
}

<partial name="_PageHeader" model="@pageHeader" />

<!-- Content Start -->
<div class="container-fluid py-5">
    <div class="container">
        <form asp-action="Delete" asp-controller="Product">

            <div class="px-5 py-2">
                <div class="row">


                    <div class="col-lg-12">
                        <input type="hidden" asp-for="ProductId" />

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-4">
                                    <label class="mb-2">Name</label>
                                    <input type="text" asp-for="Name" class="w-100 form-control border-0 py-3" disabled />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-4">
                                    <label class="mb-2">Category Name</label>
                                    <input type="text" asp-for="CategoryName" class="w-100 form-control border-0 py-3" disabled />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-4">
                                    <label class="mb-2">Price</label>
                                    <input type="number" asp-for="Price" class="w-100 form-control border-0 py-3" disabled />
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-9">
                                <div class="mb-4">
                                    <label class="mb-2">Description</label>
                                    <textarea asp-for="Description" rows="5" class="w-100 form-control border-0 py-3" disabled></textarea>
                                </div>

                            </div>

                            <div class="col-md-3">
                                <div class="mb-4">
                                    <label class="mb-2">Image</label>
                                    <br />
                                    <img src="@Model.ImageUrl" class="img-fluid me-5"
                                         style="height:150px; margin:auto" alt="image not found!">
                                </div>
                            </div>

                        </div>


                    </div>
                    <hr />

                </div>
            </div>

            <div class="text-center">
                <button class="btn border-secondary py-3 px-5 bg-white text-primary" type="submit">Click to confirm delete this product?</button>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}