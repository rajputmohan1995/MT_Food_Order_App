@model PageDefaultHeader

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@Model.Title</h1>
    <ol class="breadcrumb justify-content-center mb-0">

        @foreach (var pageLink in Model.PageLinks)
        {
            if (pageLink.IsCurrentPage)
            {
                <li class="breadcrumb-item active">
                    <a class="text-white">
                        @pageLink.PageName
                    </a>
                </li>
            }
            else
            {
                <li class="breadcrumb-item">
                    <a asp-controller="@pageLink.Controller" asp-action="@pageLink.Action">@pageLink.PageName</a>
                </li>
            }
        }
    </ol>
</div>
<!-- Single Page Header End -->